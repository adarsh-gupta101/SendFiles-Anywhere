<!DOCTYPE html>
<html>
<head>
    <title>File Sharing App</title>
    <style>
        body {
            background-color: #f5f5f5; /* Light background color */
            color: #333; /* Dark text color */
            font-family: Arial, sans-serif;
            text-align: center;
        }

        h1 {
            color: #0077cc; /* Accent color for headings */
            margin: 20px 0;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        form {
            margin-bottom: 20px;
        }

        input[type="file"] {
            background-color: #fff; /* Light input background */
            color: #333; /* Dark text color */
            border: none;
            padding: 10px;
            width: 100%;
        }

        input[type="submit"], button {
            background-color: #0077cc; /* Accent color for buttons */
            color: #fff; /* Light text color */
            border: none;
            padding: 10px 20px;
            cursor: pointer;
        }

        input[type="submit"]:hover, button:hover {
            background-color: #005b99; /* Slightly darker accent on hover */
        }

        input[type="submit"] {
            display: block;
            margin-top: 10px;
        }

        #messages {
            background-color: #fff; /* Light message background */
            padding: 10px;
            max-height: 200px;
            overflow-y: auto;
            border: 1px solid #ccc; /* Light border for messages */
            margin: 20px 0;
        }

        .message {
            margin-bottom: 10px;
            padding: 5px;
        }

        #file-data img, #file-data video {
            max-width: 100%;
            height: auto;
        }

        #files, #file-data {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>File Sharing App</h1>
        <form id="upload-form" method="POST" enctype="multipart/form-data">
            <input type="file" id="file-input" name="file" />
            <input type="submit" value="Upload" />
        </form>

        <form onsubmit="return false;">
            <input id="room-input" placeholder="Enter room name" />
            <button onclick="createRoom(document.getElementById('room-input').value)">Create Room</button>
            <button onclick="joinRoom(document.getElementById('room-input').value)">Join Room</button>
        </form>

        <div>
            <div id="messages"></div>
            <input id="message-input" placeholder="Enter a message" />
            <button onclick="sendMessage(document.getElementById('room-input').value, document.getElementById('message-input').value)">Send Message</button>
        </div>

        <div id="files"></div>
        <div id="file-data"></div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/client.js"></script>
</body>
</html>
